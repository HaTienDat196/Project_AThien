%nav.navbar.navbar-inverse
  .container
    .navbar-header
      = link_to 'HomePage', root_path, class: 'navbar-brand'
    #navbar
      %ul.nav.navbar-nav.pull-right
        - if user_signed_in?
          %li.dropdown>
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.username
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to 'Profile',edit_users_path
              %li= link_to 'Password', editpassword_users_path
              %li= link_to 'Log out', destroy_user_session_path, method: :delete
          \.
          - if current_user.admin? && !current_user?(users_url)
            %li= link_to "Admin Manager", users_path
        - else
          %li= link_to 'Log In', new_user_session_path
          %li= link_to 'Sign Up', sign_in_path
